<div class="container">
  <div class="row">
    <div id="solution-code-one"   >
    <% if current_user == nil %>
    <% else %>
      <%= CodeRay.scan(@solutions.first[:content], :ruby).div.html_safe %>
      <%= button_to 'Vote', "", id: 'solution-one', data: { winner: "#{@solutions.first[:id]}", loser: "#{@solutions.second[:id]}" } %>
    </div>

    <div id="solution-code-two" >
      <%= CodeRay.scan(@solutions.second[:content], :ruby).div.html_safe %>
      <%= button_to 'Vote', "", id: 'solution-two', selected_id: "#{@solutions.second[:id]}", second_id: "#{@solutions.first[:id]}" %>
    </div>
  </div>

    <div>
      <%= text_field(:comment, :post, placeholder: "Leave a comment to vote ", id: "comment") %>
    </div>
    <% end %>

</div>
